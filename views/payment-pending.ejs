<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Processing Payment - Buulas WiFi</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #f59e0b 0%, #d97706 50%, #b45309 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .container {
      width: 100%;
      max-width: 440px;
    }

    .card {
      background: #fff;
      border-radius: 20px;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      overflow: hidden;
    }

    .card-header {
      background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
      padding: 32px 24px;
      text-align: center;
      color: #fff;
    }

    .pending-icon {
      width: 80px;
      height: 80px;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 16px;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); opacity: 1; }
      50% { transform: scale(1.05); opacity: 0.8; }
    }

    .pending-icon svg {
      width: 48px;
      height: 48px;
      stroke: #fff;
      stroke-width: 2;
      animation: spin 2s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .card-header h1 {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 4px;
    }

    .card-header p {
      font-size: 0.9375rem;
      opacity: 0.9;
    }

    .card-body {
      padding: 24px;
    }

    .message-box {
      background: #fef3c7;
      border: 1px solid #fcd34d;
      border-radius: 12px;
      padding: 16px;
      text-align: center;
      margin-bottom: 20px;
    }

    .message-box p {
      font-size: 0.9375rem;
      color: #92400e;
      line-height: 1.5;
    }

    .phone-prompt {
      background: #f9fafb;
      border-radius: 12px;
      padding: 20px;
      text-align: center;
      margin-bottom: 20px;
    }

    .phone-icon {
      width: 60px;
      height: 60px;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 12px;
    }

    .phone-icon svg {
      width: 32px;
      height: 32px;
      stroke: #fff;
      stroke-width: 2;
    }

    .phone-prompt h3 {
      font-size: 1rem;
      font-weight: 600;
      color: #111827;
      margin-bottom: 8px;
    }

    .phone-prompt p {
      font-size: 0.875rem;
      color: #6b7280;
    }

    .status-check {
      text-align: center;
      padding: 16px;
      background: #f0fdf4;
      border-radius: 12px;
      margin-bottom: 20px;
    }

    .status-check.checking {
      background: #fef3c7;
    }

    .status-check.success {
      background: #dcfce7;
    }

    .status-check.failed {
      background: #fee2e2;
    }

    .status-text {
      font-size: 0.875rem;
      color: #374151;
    }

    .instructions {
      margin-bottom: 20px;
    }

    .instructions h3 {
      font-size: 0.875rem;
      font-weight: 600;
      color: #374151;
      margin-bottom: 12px;
    }

    .instructions ol {
      list-style: none;
      counter-reset: steps;
    }

    .instructions li {
      counter-increment: steps;
      display: flex;
      align-items: flex-start;
      gap: 12px;
      margin-bottom: 10px;
      font-size: 0.875rem;
      color: #4b5563;
    }

    .instructions li::before {
      content: counter(steps);
      flex-shrink: 0;
      width: 24px;
      height: 24px;
      background: #f59e0b;
      color: #fff;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.75rem;
      font-weight: 600;
    }

    .btn {
      display: block;
      width: 100%;
      padding: 14px 24px;
      font-size: 1rem;
      font-weight: 600;
      text-align: center;
      text-decoration: none;
      border-radius: 12px;
      border: none;
      cursor: pointer;
      transition: all 0.2s;
    }

    .btn-primary {
      background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
      color: #fff;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px -10px rgba(245, 158, 11, 0.5);
    }

    .btn-secondary {
      background: #f3f4f6;
      color: #374151;
      margin-top: 12px;
    }

    .btn-secondary:hover {
      background: #e5e7eb;
    }

    .order-ref {
      text-align: center;
      font-size: 0.75rem;
      color: #9ca3af;
      margin-top: 16px;
    }

    .brand {
      text-align: center;
      margin-top: 24px;
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.875rem;
    }

    .brand strong {
      color: #fff;
      font-weight: 600;
    }

    .loader {
      display: inline-block;
      width: 20px;
      height: 20px;
      border: 2px solid #f3f3f3;
      border-top: 2px solid #d97706;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-right: 8px;
      vertical-align: middle;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <div class="pending-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
        </div>
        <h1>Processing Payment</h1>
        <p>Please wait while we confirm your payment</p>
      </div>

      <div class="card-body">
        <div class="message-box">
          <p><%= message || 'Your payment is being processed.' %></p>
        </div>

        <div class="phone-prompt">
          <div class="phone-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
              <line x1="12" y1="18" x2="12.01" y2="18"></line>
            </svg>
          </div>
          <h3>Check Your Phone</h3>
          <p>A payment prompt has been sent to your mobile phone. Please enter your PIN to approve the payment.</p>
        </div>

        <div class="status-check checking" id="statusBox">
          <span class="loader"></span>
          <span class="status-text" id="statusText">Checking payment status...</span>
        </div>

        <div class="instructions">
          <h3>What's happening?</h3>
          <ol>
            <li>A payment request has been sent to your mobile money account</li>
            <li>Check your phone for the payment prompt</li>
            <li>Enter your PIN to approve the payment</li>
            <li>This page will automatically update when payment is confirmed</li>
          </ol>
        </div>

        <button class="btn btn-primary" onclick="checkStatus()" id="checkBtn">
          Check Payment Status
        </button>

        <a href="/portal" class="btn btn-secondary">
          Cancel & Return
        </a>

        <div class="order-ref">
          Order Reference: <%= orderRef %>
        </div>
      </div>
    </div>

    <div class="brand">
      Powered by <strong>Buulas Investments</strong>
    </div>
  </div>

  <script>
    const checkUrl = '<%= checkUrl || "" %>';
    const orderRef = '<%= orderRef %>';
    let checkCount = 0;
    let autoCheckInterval = null;

    async function checkStatus() {
      const statusBox = document.getElementById('statusBox');
      const statusText = document.getElementById('statusText');
      const checkBtn = document.getElementById('checkBtn');

      statusBox.className = 'status-check checking';
      statusText.innerHTML = '<span class="loader"></span> Checking payment status...';
      checkBtn.disabled = true;

      try {
        const response = await fetch(checkUrl || `/api/payments/yopayments/status/${orderRef}`);
        const result = await response.json();

        if (result.ok) {
          if (result.status === 'PAID') {
            // Payment successful - redirect to success page
            statusBox.className = 'status-check success';
            statusText.textContent = 'Payment confirmed! Redirecting...';
            clearInterval(autoCheckInterval);

            // Redirect to success page
            setTimeout(() => {
              window.location.href = `/api/payments/yopayments/redirect?orderRef=${orderRef}`;
            }, 1500);
            return;
          } else if (result.status === 'FAILED') {
            // Payment failed
            statusBox.className = 'status-check failed';
            statusText.textContent = result.message || 'Payment failed. Please try again.';
            clearInterval(autoCheckInterval);
            checkBtn.textContent = 'Try Again';
            checkBtn.onclick = () => window.location.href = '/portal';
          } else {
            // Still pending
            statusBox.className = 'status-check checking';
            statusText.textContent = 'Payment still pending. Please check your phone.';
          }
        } else {
          statusText.textContent = result.message || 'Unable to check status. Please try again.';
        }
      } catch (e) {
        statusText.textContent = 'Connection error. Please try again.';
      }

      checkBtn.disabled = false;
      checkCount++;

      // Stop auto-checking after 30 attempts (5 minutes)
      if (checkCount >= 30) {
        clearInterval(autoCheckInterval);
        statusText.textContent = 'Payment verification timeout. Please check manually.';
      }
    }

    // Auto-check every 10 seconds
    if (checkUrl || orderRef) {
      autoCheckInterval = setInterval(checkStatus, 10000);
      // Initial check after 5 seconds
      setTimeout(checkStatus, 5000);
    }
  </script>
</body>
</html>
