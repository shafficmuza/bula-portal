<%- include("../partials/head", { title: "Bula Admin - Locations", assetVersion }) %>

<body>
  <div class="app">
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <%- include("../partials/sidebar", { activeMenu: "locations" }) %>

    <div class="main">
      <%- include("../partials/topbar", { admin }) %>

      <div class="content">
        <div class="page-title">
          <h2>Locations</h2>
          <div class="muted">Manage locations for device deployment</div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid--3" id="statsGrid">
          <div class="card card--stat">
            <div class="card-title">Total Locations</div>
            <div class="card-value" id="statTotal">-</div>
            <div class="card-sub">All locations</div>
          </div>
          <div class="card card--stat">
            <div class="card-title">Active</div>
            <div class="card-value" id="statActive">-</div>
            <div class="card-sub">Available for selection</div>
          </div>
          <div class="card card--stat">
            <div class="card-title">Total Devices</div>
            <div class="card-value" id="statDevices">-</div>
            <div class="card-sub">Across all locations</div>
          </div>
        </div>

        <!-- Locations List -->
        <div class="card mt-16">
          <div class="card-head">
            <h3>All Locations</h3>
            <div class="card-actions">
              <button class="btn btn--sm" onclick="loadLocations()">
                <i data-lucide="refresh-cw"></i>
                Refresh
              </button>
              <button type="button" class="btn btn--primary" onclick="openAddModal()">
                <i data-lucide="plus"></i>
                Add Location
              </button>
            </div>
          </div>

          <!-- Locations Table -->
          <div class="table-wrap">
            <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Address</th>
                  <th>Devices</th>
                  <th>Status</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="locationsTable">
                <tr><td colspan="6" class="muted text-center">Loading...</td></tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Add/Edit Location Modal -->
  <div class="modal-overlay" id="locationModal">
    <div class="modal">
      <div class="modal-header">
        <h3 id="modalTitle">Add Location</h3>
        <button class="modal-close" onclick="closeModal()">
          <i data-lucide="x"></i>
        </button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="locationId">

        <div class="form-group">
          <label class="form-label">Location Name *</label>
          <input type="text" id="locationName" class="form-input" placeholder="e.g., Building A, Main Office">
        </div>

        <div class="form-group">
          <label class="form-label">Address</label>
          <input type="text" id="locationAddress" class="form-input" placeholder="e.g., 123 Main Street, Kampala">
        </div>

        <div class="form-group">
          <label class="form-label">Description</label>
          <textarea id="locationDescription" class="form-input" rows="3" placeholder="Optional notes about this location"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn" onclick="closeModal()">Cancel</button>
        <button class="btn btn--primary" onclick="saveLocation()" id="saveBtn">
          <i data-lucide="save"></i>
          Save Location
        </button>
      </div>
    </div>
  </div>

  <style>
    .modal-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0,0,0,0.5);
      z-index: 200;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    .modal-overlay.active {
      display: flex;
    }
    .modal {
      background: var(--white);
      border-radius: var(--radius);
      width: 100%;
      max-width: 480px;
      max-height: 90vh;
      overflow: hidden;
      display: flex;
      flex-direction: column;
    }
    .modal-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 16px 20px;
      border-bottom: 1px solid var(--border);
    }
    .modal-header h3 {
      margin: 0;
    }
    .modal-close {
      background: none;
      border: none;
      cursor: pointer;
      padding: 4px;
      color: var(--text-muted);
    }
    .modal-body {
      padding: 20px;
      overflow-y: auto;
    }
    .modal-footer {
      display: flex;
      justify-content: flex-end;
      gap: 12px;
      padding: 16px 20px;
      border-top: 1px solid var(--border);
    }
    .form-group {
      margin-bottom: 16px;
    }
    .form-label {
      display: block;
      font-size: 0.875rem;
      font-weight: 500;
      margin-bottom: 6px;
    }
    .form-input {
      width: 100%;
      padding: 10px 12px;
      border: 1px solid var(--border);
      border-radius: var(--radius-sm);
      font-size: 0.9375rem;
      font-family: inherit;
    }
    .form-input:focus {
      outline: none;
      border-color: var(--primary);
    }
    textarea.form-input {
      resize: vertical;
      min-height: 60px;
    }

    .action-btn {
      padding: 6px 10px;
      border: 1px solid var(--border);
      background: var(--white);
      border-radius: var(--radius-sm);
      cursor: pointer;
      font-size: 0.8125rem;
    }
    .action-btn:hover {
      background: var(--bg);
    }
    .action-btn--danger {
      color: #dc2626;
      border-color: #fecaca;
    }
    .action-btn--danger:hover {
      background: #fee2e2;
    }

    .device-count {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 4px 10px;
      background: var(--bg);
      border-radius: 50px;
      font-size: 0.8125rem;
      font-weight: 500;
    }

    @media (max-width: 768px) {
      .modal {
        margin: 10px;
      }
    }
  </style>

  <script src="/js/app.js?v=<%= assetVersion || '' %>"></script>
  <script>
    let locations = [];

    // Load locations
    async function loadLocations() {
      try {
        const res = await fetch('/admin/api/locations', { credentials: 'same-origin' });
        const data = await res.json();

        if (data.ok) {
          locations = data.locations;
          renderLocations(locations);
          updateStats(locations);
        }
      } catch (e) {
        console.error('Failed to load locations:', e);
        document.getElementById('locationsTable').innerHTML =
          '<tr><td colspan="6" class="muted text-center">Failed to load locations</td></tr>';
      }
    }

    // Update stats
    function updateStats(locations) {
      const total = locations.length;
      const active = locations.filter(l => l.is_active).length;
      const totalDevices = locations.reduce((sum, l) => sum + (l.device_count || 0), 0);

      document.getElementById('statTotal').textContent = total;
      document.getElementById('statActive').textContent = active;
      document.getElementById('statDevices').textContent = totalDevices;
    }

    // Render locations table
    function renderLocations(locations) {
      const tbody = document.getElementById('locationsTable');

      if (!locations.length) {
        tbody.innerHTML = '<tr><td colspan="6" class="muted text-center">No locations found. Add your first location.</td></tr>';
        return;
      }

      tbody.innerHTML = locations.map(l => `
        <tr>
          <td>
            <strong>${escapeHtml(l.name)}</strong>
            ${l.description ? `<div class="muted" style="font-size:0.75rem">${escapeHtml(l.description)}</div>` : ''}
          </td>
          <td>${l.address ? escapeHtml(l.address) : '<span class="muted">-</span>'}</td>
          <td><span class="device-count"><i data-lucide="router" style="width:14px;height:14px"></i> ${l.device_count || 0}</span></td>
          <td><span class="badge ${l.is_active ? 'active' : ''}">${l.is_active ? 'Active' : 'Inactive'}</span></td>
          <td>${l.created_at ? new Date(l.created_at).toLocaleDateString() : '-'}</td>
          <td>
            <button class="action-btn" onclick="editLocation(${l.id})" title="Edit">
              <i data-lucide="edit-2"></i>
            </button>
            <button class="action-btn" onclick="toggleStatus(${l.id})" title="${l.is_active ? 'Deactivate' : 'Activate'}">
              <i data-lucide="${l.is_active ? 'eye-off' : 'eye'}"></i>
            </button>
            ${l.device_count === 0 ? `
              <button class="action-btn action-btn--danger" onclick="deleteLocation(${l.id})" title="Delete">
                <i data-lucide="trash-2"></i>
              </button>
            ` : ''}
          </td>
        </tr>
      `).join('');

      if (typeof lucide !== 'undefined') lucide.createIcons();
    }

    // Escape HTML
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Open add modal
    function openAddModal() {
      document.getElementById('modalTitle').textContent = 'Add Location';
      document.getElementById('locationId').value = '';
      document.getElementById('locationName').value = '';
      document.getElementById('locationAddress').value = '';
      document.getElementById('locationDescription').value = '';
      document.getElementById('locationModal').classList.add('active');
    }

    // Edit location
    function editLocation(id) {
      const location = locations.find(l => l.id === id);
      if (!location) return;

      document.getElementById('modalTitle').textContent = 'Edit Location';
      document.getElementById('locationId').value = location.id;
      document.getElementById('locationName').value = location.name;
      document.getElementById('locationAddress').value = location.address || '';
      document.getElementById('locationDescription').value = location.description || '';
      document.getElementById('locationModal').classList.add('active');
    }

    // Close modal
    function closeModal() {
      document.getElementById('locationModal').classList.remove('active');
    }

    // Save location
    async function saveLocation() {
      const id = document.getElementById('locationId').value;
      const name = document.getElementById('locationName').value.trim();
      const address = document.getElementById('locationAddress').value.trim();
      const description = document.getElementById('locationDescription').value.trim();

      if (!name) {
        alert('Please enter a location name');
        return;
      }

      const btn = document.getElementById('saveBtn');
      btn.disabled = true;
      btn.innerHTML = '<i data-lucide="loader"></i> Saving...';

      try {
        const url = id ? `/admin/api/locations/${id}` : '/admin/api/locations';
        const method = id ? 'PUT' : 'POST';

        const res = await fetch(url, {
          method,
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify({ name, address, description, is_active: true })
        });

        const data = await res.json();

        if (data.ok) {
          closeModal();
          loadLocations();
        } else {
          alert(data.message || 'Failed to save location');
        }
      } catch (e) {
        alert('Failed to save location');
      } finally {
        btn.disabled = false;
        btn.innerHTML = '<i data-lucide="save"></i> Save Location';
        if (typeof lucide !== 'undefined') lucide.createIcons();
      }
    }

    // Toggle status
    async function toggleStatus(id) {
      try {
        const res = await fetch(`/admin/api/locations/${id}/toggle`, {
          method: 'PATCH',
          credentials: 'same-origin'
        });
        const data = await res.json();

        if (data.ok) {
          loadLocations();
        } else {
          alert(data.message || 'Failed to toggle status');
        }
      } catch (e) {
        alert('Failed to toggle status');
      }
    }

    // Delete location
    async function deleteLocation(id) {
      const location = locations.find(l => l.id === id);
      if (!location) return;

      if (!confirm(`Are you sure you want to delete "${location.name}"?`)) {
        return;
      }

      try {
        const res = await fetch(`/admin/api/locations/${id}`, {
          method: 'DELETE',
          credentials: 'same-origin'
        });
        const data = await res.json();

        if (data.ok) {
          loadLocations();
        } else {
          alert(data.message || 'Failed to delete location');
        }
      } catch (e) {
        alert('Failed to delete location');
      }
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      loadLocations();
    });
  </script>
</body>
</html>
