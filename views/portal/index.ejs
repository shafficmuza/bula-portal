<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= settings.portal_title || 'WiFi Portal' %> - <%= settings.business_name || 'WiFi Hotspot' %></title>
  <% if (settings.favicon_url) { %>
  <link rel="icon" href="<%= settings.favicon_url %>" type="image/x-icon">
  <% } %>
  <style>
    :root {
      --primary: <%= settings.primary_color || '#0ea56b' %>;
      --primary-light: <%= settings.primary_light || '#e6f6ef' %>;
      --primary-dark: <%= settings.primary_dark || '#0b8a59' %>;
      --bg: <%= settings.portal_background_color || '#f7f8fa' %>;
      --white: #fff;
      --text: #1f2937;
      --text-muted: #6b7280;
      --border: #e5e7eb;
      --radius: 16px;
      --radius-sm: 10px;
    }

    <% if (settings.theme_mode === 'dark' || (settings.theme_mode === 'auto')) { %>
    @media (prefers-color-scheme: dark) {
      :root {
        --bg: #111827;
        --white: #1f2937;
        --text: #f9fafb;
        --text-muted: #9ca3af;
        --border: #374151;
      }
    }
    <% } %>

    <% if (settings.theme_mode === 'dark') { %>
    :root {
      --bg: #111827;
      --white: #1f2937;
      --text: #f9fafb;
      --text-muted: #9ca3af;
      --border: #374151;
    }
    <% } %>

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: var(--bg);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      <% if (settings.portal_background_url) { %>
      background-image: url('<%= settings.portal_background_url %>');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      <% } %>
    }

    .portal-container {
      width: 100%;
      max-width: 420px;
    }

    .portal-card {
      background: var(--white);
      border-radius: var(--radius);
      padding: 32px;
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
      <% if (settings.portal_background_url) { %>
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.95);
      <% } %>
    }

    .portal-header {
      text-align: center;
      margin-bottom: 24px;
    }

    .portal-logo {
      max-width: 100px;
      max-height: 100px;
      margin-bottom: 16px;
    }

    .portal-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--text);
      margin-bottom: 8px;
    }

    .portal-subtitle {
      color: var(--text-muted);
      font-size: 0.9375rem;
      line-height: 1.5;
    }

    .portal-business {
      font-weight: 600;
      color: var(--primary);
    }

    .plans-section {
      margin-bottom: 24px;
    }

    .plans-title {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--text-muted);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: 12px;
    }

    .plan-list {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .plan-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 14px 16px;
      border: 2px solid var(--border);
      border-radius: var(--radius-sm);
      cursor: pointer;
      transition: all 0.15s ease;
    }

    .plan-item:hover {
      border-color: var(--primary);
      background: var(--primary-light);
    }

    .plan-item.selected {
      border-color: var(--primary);
      background: var(--primary-light);
    }

    .plan-info {
      display: flex;
      flex-direction: column;
      gap: 2px;
    }

    .plan-name {
      font-weight: 600;
      color: var(--text);
    }

    .plan-duration {
      font-size: 0.8125rem;
      color: var(--text-muted);
    }

    .plan-price {
      font-weight: 700;
      font-size: 1.125rem;
      color: var(--primary);
    }

    .voucher-section {
      margin-bottom: 24px;
    }

    .voucher-divider {
      display: flex;
      align-items: center;
      gap: 12px;
      margin: 24px 0;
      color: var(--text-muted);
      font-size: 0.8125rem;
    }

    .voucher-divider::before,
    .voucher-divider::after {
      content: '';
      flex: 1;
      height: 1px;
      background: var(--border);
    }

    .voucher-input-group {
      display: flex;
      gap: 8px;
    }

    .voucher-input {
      flex: 1;
      padding: 12px 16px;
      border: 2px solid var(--border);
      border-radius: var(--radius-sm);
      font-size: 1rem;
      text-align: center;
      letter-spacing: 0.1em;
      transition: border-color 0.15s ease;
    }

    .voucher-input:focus {
      outline: none;
      border-color: var(--primary);
    }

    .voucher-input::placeholder {
      letter-spacing: normal;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      padding: 12px 24px;
      font-size: 0.9375rem;
      font-weight: 600;
      border-radius: var(--radius-sm);
      border: none;
      cursor: pointer;
      transition: all 0.15s ease;
      width: 100%;
    }

    .btn--primary {
      background: var(--primary);
      color: white;
    }

    .btn--primary:hover {
      background: var(--primary-dark);
    }

    .btn--secondary {
      background: var(--primary-light);
      color: var(--primary);
    }

    .btn--secondary:hover {
      background: var(--primary);
      color: white;
    }

    .portal-footer {
      margin-top: 24px;
      padding-top: 20px;
      border-top: 1px solid var(--border);
    }

    .business-info {
      text-align: center;
      margin-bottom: 16px;
    }

    .business-name {
      font-weight: 600;
      color: var(--text);
      font-size: 0.9375rem;
    }

    .business-tagline {
      font-size: 0.8125rem;
      color: var(--text-muted);
      margin-top: 2px;
    }

    .contact-info {
      display: flex;
      flex-direction: column;
      gap: 8px;
      margin-top: 12px;
    }

    .contact-item {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      font-size: 0.8125rem;
      color: var(--text-muted);
    }

    .contact-item svg {
      width: 14px;
      height: 14px;
      flex-shrink: 0;
    }

    .contact-item a {
      color: var(--primary);
      text-decoration: none;
    }

    .contact-item a:hover {
      text-decoration: underline;
    }

    .social-links {
      display: flex;
      justify-content: center;
      gap: 16px;
      margin-top: 16px;
    }

    .social-link {
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--primary-light);
      color: var(--primary);
      border-radius: 50%;
      transition: all 0.15s ease;
    }

    .social-link:hover {
      background: var(--primary);
      color: white;
    }

    .social-link svg {
      width: 18px;
      height: 18px;
    }

    .terms-text {
      font-size: 0.75rem;
      color: var(--text-muted);
      text-align: center;
      margin-top: 16px;
      line-height: 1.5;
    }

    .terms-text a {
      color: var(--primary);
      text-decoration: none;
    }

    .terms-text a:hover {
      text-decoration: underline;
    }

    .alert {
      padding: 12px 16px;
      border-radius: var(--radius-sm);
      margin-bottom: 16px;
      font-size: 0.875rem;
    }

    .alert--success {
      background: #dcfce7;
      color: #166534;
      border: 1px solid #bbf7d0;
    }

    .alert--error {
      background: #fee2e2;
      color: #991b1b;
      border: 1px solid #fecaca;
    }

    .hidden {
      display: none !important;
    }

    .loading {
      opacity: 0.7;
      pointer-events: none;
    }

    @media (max-width: 480px) {
      .portal-card {
        padding: 24px 20px;
      }

      .portal-title {
        font-size: 1.25rem;
      }
    }

    <%= settings.portal_custom_css || '' %>
  </style>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
  <div class="portal-container">
    <div class="portal-card">
      <div class="portal-header">
        <% if (settings.logo_url) { %>
        <img src="<%= settings.logo_url %>" alt="<%= settings.business_name %>" class="portal-logo">
        <% } %>
        <h1 class="portal-title"><%= settings.portal_title || 'Welcome to WiFi' %></h1>
        <p class="portal-subtitle">
          <%= settings.portal_welcome_text || 'Connect to high-speed internet' %>
          <% if (settings.business_name) { %>
          <br>at <span class="portal-business"><%= settings.business_name %></span>
          <% } %>
        </p>
      </div>

      <div id="alertBox" class="alert hidden"></div>

      <!-- Voucher Login Section -->
      <div class="voucher-section">
        <div class="plans-title">Have a voucher code?</div>
        <form id="voucherForm">
          <div class="voucher-input-group" style="flex-direction: column;">
            <input type="text" id="voucherCode" class="voucher-input" placeholder="Enter 5-digit code" maxlength="5" pattern="\d*" inputmode="numeric">
            <button type="submit" class="btn btn--primary" style="margin-top: 10px;">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              Connect Now
            </button>
          </div>
        </form>
      </div>

      <div class="voucher-divider">or purchase a plan</div>

      <!-- Plans Section -->
      <div class="plans-section">
        <div class="plans-title">Select a WiFi Plan</div>
        <div class="plan-list" id="planList">
          <div class="plan-item loading">
            <div class="plan-info">
              <span class="plan-name">Loading plans...</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Phone Number Input -->
      <div class="phone-section" style="margin-bottom: 16px;">
        <input type="tel" id="phoneNumber" class="voucher-input" placeholder="Phone: 2567XXXXXXXX" maxlength="12" pattern="\d*" inputmode="numeric" style="margin-bottom: 10px;">
      </div>

      <button class="btn btn--secondary" id="purchaseBtn" disabled>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="5" rx="2"/><line x1="2" x2="22" y1="10" y2="10"/></svg>
        Buy Selected Plan
      </button>

      <div class="portal-footer">
        <div class="business-info">
          <div class="business-name"><%= settings.business_name || 'WiFi Hotspot' %></div>
          <% if (settings.tagline) { %>
          <div class="business-tagline"><%= settings.tagline %></div>
          <% } %>
        </div>

        <% if (settings.address || settings.phone || settings.email || settings.support_phone || settings.support_email) { %>
        <div class="contact-info">
          <% if (settings.address) { %>
          <div class="contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
            <span><%= settings.address %></span>
          </div>
          <% } %>
          <% if (settings.support_phone || settings.phone) { %>
          <div class="contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            <a href="tel:<%= settings.support_phone || settings.phone %>"><%= settings.support_phone || settings.phone %></a>
          </div>
          <% } %>
          <% if (settings.support_email || settings.email) { %>
          <div class="contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
            <a href="mailto:<%= settings.support_email || settings.email %>"><%= settings.support_email || settings.email %></a>
          </div>
          <% } %>
          <% if (settings.support_hours) { %>
          <div class="contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            <span><%= settings.support_hours %></span>
          </div>
          <% } %>
        </div>
        <% } %>

        <% if (settings.facebook_url || settings.twitter_url || settings.instagram_url) { %>
        <div class="social-links">
          <% if (settings.facebook_url) { %>
          <a href="<%= settings.facebook_url %>" target="_blank" class="social-link" title="Facebook">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
          </a>
          <% } %>
          <% if (settings.twitter_url) { %>
          <a href="<%= settings.twitter_url %>" target="_blank" class="social-link" title="Twitter">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/></svg>
          </a>
          <% } %>
          <% if (settings.instagram_url) { %>
          <a href="<%= settings.instagram_url %>" target="_blank" class="social-link" title="Instagram">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
          </a>
          <% } %>
        </div>
        <% } %>

        <% if (settings.terms_text || settings.terms_url || settings.privacy_url) { %>
        <div class="terms-text">
          <% if (settings.terms_text) { %>
          <%= settings.terms_text %>
          <% } else { %>
          By connecting, you agree to our
          <% if (settings.terms_url) { %><a href="<%= settings.terms_url %>" target="_blank">Terms of Service</a><% } %>
          <% if (settings.terms_url && settings.privacy_url) { %> and <% } %>
          <% if (settings.privacy_url) { %><a href="<%= settings.privacy_url %>" target="_blank">Privacy Policy</a><% } %>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    let selectedPlan = null;

    // Load plans
    async function loadPlans() {
      try {
        const response = await fetch('/api/portal/plans');
        const data = await response.json();

        if (data.ok && data.plans.length > 0) {
          renderPlans(data.plans);
        } else {
          document.getElementById('planList').innerHTML = '<div class="plan-item"><div class="plan-info"><span class="plan-name" style="color: var(--text-muted);">No plans available</span></div></div>';
        }
      } catch (e) {
        document.getElementById('planList').innerHTML = '<div class="plan-item"><div class="plan-info"><span class="plan-name" style="color: var(--text-muted);">Error loading plans</span></div></div>';
      }
    }

    function renderPlans(plans) {
      const html = plans.map(plan => `
        <div class="plan-item" data-plan-id="${plan.id}" data-plan-code="${plan.code}">
          <div class="plan-info">
            <span class="plan-name">${plan.name}</span>
            <span class="plan-duration">${formatDuration(plan.duration_minutes)}</span>
          </div>
          <span class="plan-price">${formatPrice(plan.price_ugx)}</span>
        </div>
      `).join('');

      document.getElementById('planList').innerHTML = html;

      // Add click handlers
      document.querySelectorAll('.plan-item').forEach(item => {
        item.addEventListener('click', () => {
          document.querySelectorAll('.plan-item').forEach(i => i.classList.remove('selected'));
          item.classList.add('selected');
          selectedPlan = {
            id: item.dataset.planId,
            code: item.dataset.planCode
          };
          document.getElementById('purchaseBtn').disabled = false;
        });
      });
    }

    function formatDuration(minutes) {
      if (minutes < 60) return `${minutes} minutes`;
      if (minutes < 1440) return `${Math.round(minutes / 60)} hour${minutes >= 120 ? 's' : ''}`;
      return `${Math.round(minutes / 1440)} day${minutes >= 2880 ? 's' : ''}`;
    }

    function formatPrice(ugx) {
      return `UGX ${ugx.toLocaleString()}`;
    }

    function showAlert(message, type = 'success') {
      const alertBox = document.getElementById('alertBox');
      alertBox.textContent = message;
      alertBox.className = `alert alert--${type}`;
      alertBox.classList.remove('hidden');
      setTimeout(() => alertBox.classList.add('hidden'), 5000);
    }

    // Voucher form
    document.getElementById('voucherForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const code = document.getElementById('voucherCode').value.trim();

      if (!code) {
        showAlert('Please enter a voucher code', 'error');
        return;
      }

      try {
        const response = await fetch('/api/portal/voucher/validate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ code })
        });

        const data = await response.json();

        if (data.ok) {
          showAlert(`Voucher valid! Plan: ${data.voucher.plan_name}. You can now connect to the WiFi network.`, 'success');
          // In a real captive portal, this would redirect to the login success page
          // or trigger MikroTik/FreeRADIUS authentication
        } else {
          showAlert(data.message || 'Invalid voucher code', 'error');
        }
      } catch (e) {
        showAlert('Error validating voucher', 'error');
      }
    });

    // Purchase button
    document.getElementById('purchaseBtn').addEventListener('click', async () => {
      if (!selectedPlan) {
        showAlert('Please select a plan', 'error');
        return;
      }

      const msisdn = document.getElementById('phoneNumber').value.trim();
      if (!msisdn || !/^256\d{9}$/.test(msisdn)) {
        showAlert('Enter a valid Uganda phone number (2567XXXXXXXX)', 'error');
        return;
      }

      const btn = document.getElementById('purchaseBtn');
      btn.disabled = true;
      btn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg> Processing...';

      try {
        const response = await fetch('/api/payments/flutterwave/init', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ msisdn, planCode: selectedPlan.code })
        });

        const data = await response.json();

        if (data.ok && data.paymentLink) {
          localStorage.setItem('last_order_ref', data.orderRef);
          window.location.href = data.paymentLink;
        } else {
          showAlert(data.message || 'Payment initialization failed', 'error');
          btn.disabled = false;
          btn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="5" rx="2"/><line x1="2" x2="22" y1="10" y2="10"/></svg> Buy Selected Plan';
        }
      } catch (e) {
        showAlert('Error initializing payment. Please try again.', 'error');
        btn.disabled = false;
        btn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="5" rx="2"/><line x1="2" x2="22" y1="10" y2="10"/></svg> Buy Selected Plan';
      }
    });

    // Load plans on page load
    loadPlans();
  </script>
</body>
</html>
